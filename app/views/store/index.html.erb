<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>
<h1>Your Pragmatic Catalog</h1>
<% if @session_count && @session_count >= 5 %>

<h2>You are visited this page <%= pluralize(@session_count, 'time') %></h2>
<% end %>

<ul class="catalog">
  <% cache @products do %>
    <% @products.each do |product| %>
      <% cache product do %>
      <%= render product %>
      <% end %>
    <% end %>
  <% end %>

</ul>